[32m+[m[32m            itemView.setImageUrl("http://zhuangbi.idagou.com/i/2015-07-07-26c59a95c0ec52dd9b94f62bb0724263.gif");[m
[32m+[m[32m            mList.add(itemView);[m
[32m+[m[32m        }[m
[32m+[m[32m        adapter.setList(mList);[m
[32m+[m[32m    }[m
