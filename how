[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    @Override[m
[32m+[m[32m    public boolean areAllItemsEnabled() {[m
[32m+[m[32m        return mAdapter.areAllItemsEnabled();[m
[32m+[m[32m    }[m
[32m+[m
